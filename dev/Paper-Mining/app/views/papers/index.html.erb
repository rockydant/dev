<h1>Listing papers</h1>

<table>
  <tr>
    <th>Id</th>
    <th>Title</th>
    <th>Url</th>
    <th>Local path</th>
    <th>Abstract</th>
    <th>Content</th>
    <th>Author</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @papers.each do |paper| %>
  <tr>
    <td><%= paper.id %></td>
    <td><%= paper.title %></td>
    <td><%= paper.url %></td>
    <td><%= paper.local_path %></td>
    <td><%= paper.abstract %></td>
    <td><%= paper.content %></td>
    <td><%= paper.author %></td>
    <td><%= link_to 'Show', paper %></td>
    <td><%= link_to 'Edit', edit_paper_path(paper) %></td>
    <td><%= link_to 'Destroy', paper, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

